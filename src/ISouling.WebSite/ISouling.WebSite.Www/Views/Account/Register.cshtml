@using Microsoft.ApplicationInsights.AspNetCore.Extensions
@model RegisterViewModel
@{
    ViewData["Title"] = Localizer["注册"];
}

<h2>@ViewData["Title"].</h2>

<form method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    <h4>@Localizer["创建新的帐号"]</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    @switch ((RegisterType?)ViewData["RegisterType"])
    {
        case RegisterType.MemberEmail:
            await Html.RenderPartialAsync("Register_Member_Email");
            break;
        case RegisterType.MemberCellphone:
            await Html.RenderPartialAsync("Register_Member_Cellphone");
            break;
        default:
            await Html.RenderPartialAsync("Register_Member_Email");
            break;
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@ViewData["Title"]</button>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}